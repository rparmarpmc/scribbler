{% liquid  
  if collection.metafields.custom.circles_urls_2.value != blank 
    assign url_array = collection.metafields.custom.circles_urls_2.value | json | remove_first: '[' | remove_first: ']' | split: ','
  endif
%}

{%- if collection.metafields.custom.circles_names_2 != blank -%}
  <ul class="roundalls-section" role="list" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
    {%- for circles_names_2 in collection.metafields.custom.circles_names_2.value -%} 
      <li class="roundalls-section-list-item">
        {%- if url_array[forloop.index0] != blank -%}<a href={{ url_array[forloop.index0] | remove: '\'  }}>{%- endif -%} 
          {%- if circles_names_2 != blank -%}
            {{ circles_names_2 }}
          {%- endif -%}
        {%- if url_array[forloop.index0] != blank -%}</a>{%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
{%- endif -%}

{% schema %}
{
    "name": "t:sections.roundedcarousel2.name",
    "class": "section",
    "tag": "section",
    "settings": [
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_heading"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 20
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 20
        }
    ],
    "presets": [
        {
            "name": "t:sections.roundedcarousel2.presets.name"
        }
    ]
}
{% endschema %}
