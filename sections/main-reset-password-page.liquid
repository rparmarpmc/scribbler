{% comment %} {{ 'password-reset.css' | asset_url | stylesheet_tag: preload: true }}
{{ 'section-main-page.css' | asset_url | stylesheet_tag: preload: true }} {% endcomment %}
<script src="{{ 'password-reset.js' | asset_url }}" defer="defer"></script>

<div class="error-icon-hidden">
  <svg id="icon-error" aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 13 13">
    <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
    <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
    <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
    <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
  </svg>
</div>

<div id="errors"></div>

<div class="password-reset-wrapper">
  <div id="login" class="password-reset-title" tabindex="-1">{{ page.title | escape }}</div>
  <div class="password-reset-info">{{ page.content }}</div>
  <form method="post" action="#" accept-charset="UTF-8" novalidate="novalidate">
    <input
      type="password"
      name="new-password"
      id="ResetForm-password"
      aria-required="true"
      placeholder="new password"
    >
    <input
      type="password"
      name="new-password-confirm"
      id="ResetForm-password-confirmation"
      aria-required="true"
      placeholder="new password confirm"
    >
    <password-reset-button>
      <button class="reset-button">
        Reset
        <svg aria-hidden="true" focusable="false" width="50" role="presentation" class="spinner reset-spinner hidden" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
          <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
        </svg>
      </button>
    </password-reset-button>
  </form>
</div>

{% schema %}
{
    "name": "t:sections.main-page.name",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_heading"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 36
        }
    ]
}
{% endschema %}
