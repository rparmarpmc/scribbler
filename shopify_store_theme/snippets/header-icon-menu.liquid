<div class="header-icons">
  <div class="header-icon menu-drawer-button">
    <header-drawer>
      <button class="open-drawer-button" aria-label="Open Drawer">
        <svg id="Layer_1" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox='0 0 75.19 66.32'>
          <line fill="none" stroke="#000" stroke-linecap="round" stroke-linejoin="round" stroke-width="3.79px" x1="1.89" y1="1.89" x2="73.3" y2="1.89"/>
          <line fill="none" stroke="#000" stroke-linecap="round" stroke-linejoin="round" stroke-width="3.79px"  x1="1.89" y1="33.16" x2="73.3" y2="33.16"/>
          <line fill="none" stroke="#000" stroke-linecap="round" stroke-linejoin="round" stroke-width="3.79px"  x1="1.89" y1="64.43" x2="73.3" y2="64.43"/>
        </svg>
        <p>Menu</p>
      </button>
      <div id="menu-drawer-container" class="drawer-closed">
        <div class="drawerOverlay"></div>
        <button class="close-drawer-button" aria-label="Close Drawer"></button>
        <div class="menu-drawer-wrapper" id="drawer-menu"></div>
      </div>
    </header-drawer> 
  </div>

  <div class="header-icon">
  </div>

  <div class="header-icon">
    {%- if shop.customer_accounts_enabled -%}
      <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}" class="header-icon-account" title="My Account">
        <svg viewBox="0 0 40 40" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:svg="http://www.w3.org/2000/svg">
          <circle fill="none" stroke="#1d1d1b" stroke-linecap="round" stroke-linejoin="round" stroke-width="2px" cx="20" cy="20.23" r="18.42"/>
          <path fill="none" stroke="#1d1d1b" stroke-linecap="round" stroke-linejoin="round" stroke-width="2px" d="M11.40,22.35s2.08,5.98,8.69,5.98,8.69-5.98,8.69-5.98"/>
          <circle class="eyes" fill="#1d1d1b" cx="15.35" cy="17.2" r="1.69"/>
          <circle class="eyes" fill="#1d1d1b" cx="24.58" cy="17.2" r="1.69"/>
        </svg>
        <p>Account</p>
      </a>
    {%- endif -%}
  </div>

  <div class="header-icon favourites-icon">
    {%- if customer -%}
      <a href="/pages/favourites" class="header-icon-favourites" title="Favourites">
        <svg width="40" height="40" viewBox='0 0 40 40' xmlns="http://www.w3.org/2000/svg" xmlns:svg="http://www.w3.org/2000/svg">
          <path fill="none" stroke="#1d1d1b" stroke-linecap= "round" stroke-linejoin="round" stroke-width="2px" d="m34.42,4.83c-1.9,-2.3 -4.3,-3.4 -6.8,-3.4s-4.9,1.1 -6.8,3.4l-1.6,2l-1.6,-2c-1.9,-2.3 -4.3,-3.4 -6.8,-3.4s-4.9,1.1 -6.8,3.4c-3.7,4.5 -3.7,11.8 0,16.3l1.6,2l11.9,14.3c0.9,1.1 2.5,1.1 3.4,0l11.9,-14.3l1.6,-2c3.7,-4.5 3.7,-11.8 0,-16.3z"/>
        </svg>
        <p>Favourites</p>
      </a>
      <div class="favourites-count-bubble"></div>
    {%- else -%}
      <a href="{{ routes.account_login_url }}" class="header-icon-favourites" title="Favourites">
        <svg width="40" height="40" viewBox='0 0 40 40' xmlns="http://www.w3.org/2000/svg" xmlns:svg="http://www.w3.org/2000/svg">
          <path fill="none" stroke="#1d1d1b" stroke-linecap="round" stroke-linejoin="round" stroke-width="2px" d="m34.42,4.83c-1.9,-2.3 -4.3,-3.4 -6.8,-3.4s-4.9,1.1 -6.8,3.4l-1.6,2l-1.6,-2c-1.9,-2.3 -4.3,-3.4 -6.8,-3.4s-4.9,1.1 -6.8,3.4c-3.7,4.5 -3.7,11.8 0,16.3l1.6,2l11.9,14.3c0.9,1.1 2.5,1.1 3.4,0l11.9,-14.3l1.6,-2c3.7,-4.5 3.7,-11.8 0,-16.3z"/>
        </svg>
        <p>Favourites</p>
      </a>
    {%- endif -%}
  </div>

  <div class="header-icon header-icon-basket">
    <a href="{{ routes.cart_url }}" id="cart-icon-bubble" title="Basket">
      <svg width="36" height="40" viewBox='0 0 40 40' xmlns="http://www.w3.org/2000/svg" xmlns:svg="http://www.w3.org/2000/svg">
        <polygon fill="none" stroke="#1d1d1b" stroke-linecap="round" stroke-linejoin="round" stroke-width="2px" points="32.900001525878906,38.70000076293945 2.6000003814697266,38.70000076293945 5.799999237060547,13.200000762939453 29.700000762939453,13.200000762939453 32.900001525878906,38.70000076293945 "/>
        <path fill="none" stroke="#1d1d1b" stroke-linecap="round" stroke-linejoin="round" stroke-width="2px" d="m10.6,19.6l0,-10.3c0,-4 3.2,-7.2 7.2,-7.2l0,0c4,0 7.2,3.2 7.2,7.2l0,10.3"/>
      </svg>
      <p>Basket</p>
      {%- if cart != empty -%}
        <div class="cart-count-bubble">
          {%- if cart.item_count < 100 -%}
            <span aria-hidden="true">{{ cart.item_count }}</span>
          {%- endif -%}
        </div>
      {%- endif -%}
    </a>
  </div>
</div>

<div id="added-to-basket-info" class="">
    <div class="cart-arrow-up"></div>
    Item added to basket
    <a href="{{ routes.cart_url }}" class="basket-info-link" title="Basket">View Cart</a>
</div>
