<script defer>
    new Promise(async function(resolve, reject) {
        while (!loadStatus.dom) {
            consoleMsg("waiting for enable dom", null, null);
            await delay(500);
        }

        loadJS("password_recovery", "{{ 'password-recovery.js' | asset_url }}", "password_recovery_loaded", true);
   
        resolve(true);
    });
</script>

