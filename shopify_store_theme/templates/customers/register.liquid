  <div id="recover" class="reset_password-title" tabindex="-1">{{ 'customer.recover_password.title' | t }}</div>
  <div class="reset_password--info">It happens! Don't worry tho, simply type your email below. Click send and then follow the instructions in the email. Easy peasy!</div>
  <form method="post" action="#" id="login_recovery" accept-charset="UTF-8" novalidate="novalidate">
    <input type="email"
      value=""
      name="email"
      id="RecoverEmail"
      autocorrect="off"
      autocapitalize="off"
      autocomplete="email"
      placeholder="{{ 'customer.login_page.email' | t }}"
    >
    <password-recovery-button>
      <button>
        {{ 'customer.login_page.submit' | t }}
        <svg aria-hidden="true" focusable="false" width="50" role="presentation" class="spinner recovery-spinner hidden" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
