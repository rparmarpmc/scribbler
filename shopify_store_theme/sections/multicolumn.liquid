<div class="multicolumn" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
    {%- if section.settings.title != blank -%}<div class="multicolumn-title">{{ section.settings.title }}</div>{%- endif -%}
    <ul class="multicolumn-list" role="list">
        {%- for block in section.blocks -%}
        <li class="multicolumn-list-item">
            <a href="{{ block.settings.link }}">
                {%- if block.settings.image != blank -%}
                <img class="multicolumn-image" src="{{ block.settings.image | image_url }}"
                     decoding="async"
                    height="{{ block.settings.image.height }}" 
                    width="{{ block.settings.image.width }}"
                    rel="preload" rel="dns-prefetch" alt="Link to {{ block.settings.name }} category">
                {%- endif -%}
                <div class="multicolumn-item-name">
                    {{ block.settings.name }}
                </div>
            </a>
        </li>
        {%- endfor -%}
    </ul>
</div>
<style>
    .multicolumn-title {
        height: 24px;
    }
    .multicolumn {
        min-height: 80px;
    }
</style>

{% schema %}
{
    "name": "t:sections.multicolumn.name",
    "class": "section",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "t:sections.multicolumn.title.name",
            "info": "t:sections.multicolumn.title.info"
        },
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_heading"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 36
        }
    ],
    "blocks": [
        {
            "type": "column",
            "name": "t:sections.multicolumn.blocks.column.name",
            "settings": [
                {
                    "type": "text",
                    "id": "name",
                    "default": "Image Description",
                    "label": "t:sections.faq_collapsible_content.blocks.collapsible_row.settings.heading.label"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "t:sections.multicolumn.blocks.column.settings.image.label"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "t:sections.multicolumn.blocks.column.settings.link.label"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "t:sections.multicolumn.presets.name",
            "blocks": [
                {
                    "type": "column"
                },
                {
                    "type": "column"
                },
                {
                    "type": "column"
                }
            ]
        }
    ]
}
{% endschema %}