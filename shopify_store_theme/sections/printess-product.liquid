    new Promise(async function(resolve, reject){
      while (!loadStatus.create_slider_loaded) {
        await delay(100);
      }

      function attachSlider() {
        document.getElementById('{{ section.id }}').innerHTML = `
          {%- for media in product.media -%}
            <div class="product-slide">
              <img src="{{ media | image_url: width: 680 }}" height="680" width="680" alt="{{ product.title | escape }}" decoding="async" style="width: 100%; height: auto;">
            </div>
          {%- endfor -%}
        `

        document.getElementById('customize-thumbnails').innerHTML = `
          {%- for media in product.media -%}
            <li>
              <img src="{{ media | image_url: width: 150 }}" height="150" width="150" alt="{{ product.title | escape }}" decoding="async">
            </li>
          {%- endfor -%}
        `

        tns({
          center: true,
          container: '#{{ section.id }}',
          loop: false,
          items: 1,
          slideBy: 1,
          mouseDrag: true,
          navAsThumbnails: true,
          navContainer: "#customize-thumbnails",
          navPosition: 'bottom',
          controls: false,
          nav: true
        });            
      }

      {% comment %} await delay(placeholderReplace); {% endcomment %}
      attachSlider(); 

      resolve(true);
    });
